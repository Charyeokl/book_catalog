<div class="container">
  <h1 class="mb-4">Publishers</h1>
  
  <div class="row">
    <% @publishers.each do |publisher| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h2 class="h5 card-title">
                  <%= link_to publisher.name, publisher %>
                </h2>
                <% if publisher.location %>
                  <p class="card-text text-muted mb-1">
                    <%= publisher.location %>
                  </p>
                <% end %>
              </div>
              <span class="badge bg-primary rounded-pill">
                <%= publisher.books.count %> books
              </span>
            </div>
            
            <div class="mt-3">
              <strong>Top Authors:</strong>
              <ul class="mb-0">
                <% publisher.authors.distinct.limit(3).each do |author| %>
                  <li><%= link_to author.name, author %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="d-flex justify-content-center">
    <%= paginate @publishers %>
  </div>
</div>